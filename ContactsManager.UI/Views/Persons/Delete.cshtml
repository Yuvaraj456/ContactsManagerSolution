@model PersonResponse
@{
    ViewBag.Title = "Delete";
}
<!--BreadCrum Starts-->
<div class="flex">
    <div class="flex-1">
        <div class="text-grey">
            <span>Contacts</span>
            <i class="fa-solid fa-caret-right"></i>
            <span>Persons</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Delete</span>
        </div>
    </div>
</div>
<!--BreadCrum Ends-->

<div class="form-container">
    <a asp-controller="Persons" asp-action="Index" class="link-hover">Back to Persons List</a>
    <h2 class="text-large">Delete Person</h2>
    <h3>Are you sure to delete this person?</h3>
    <form asp-controller="Persons" asp-action="Delete" method="post">

        <input type="hidden" asp-for="PersonId" />
        @*PersonName*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="PersonName" class="form-label pt" disabled="disabled">Person Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="PersonName"  class="form-input" />
                <span asp-validation-for="PersonName" class="text-red"></span>
            </div>

        </div>

        @*Email*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label pt" >Email Id</label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" disabled="disabled" />
                <span asp-validation-for="Email" class="text-red"></span>
            </div>

        </div>

      

        @*SubmitButton*@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button type="submit" class="button button-red-back">Confirm</button>

                <div asp-validation-summary="All" class="text-red"></div> @*capture all model validation into group of messages on web*@

                @if(ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                       <ul>
                        @foreach(var error in ViewBag.Errors)
                        {
                            <li class="ml">@error.</li>
                        }
                        </ul>
                    </div>
                    
                }
               
            </div>

        </div>

      
    </form>

</div>
